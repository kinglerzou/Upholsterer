       <div class="message_box">
         @{
            foreach (var item in Model)
            {
                <div class="msg_row"  >
                    <div class="row_left">
                        <div class="msg_Img"><a href="/User/Index?id=@item.UserId"><img src="@item.ImgUrl"/></a></div> 
                        <div class="msg_personalinfo"><span>@Html.Raw(item.Age+"岁")</span><span>@item.City</span></div>
                    </div>
                    <div class="row_right" >    
                        <div class="row_name"><span style="color: gray;font-size: small">@item.Tag</span><a href="/User/Index?id=@item.UserId">@item.UserName</a></div>
                        <div class="row_content" data-userid="@item.UserId">@Html.Raw(item.Message) </div>
                        <div class="row_time">  发布于: @item.LastMessageTime </div>
                        <div class="row_reply"><a href="/Message/CheckMessageRecords?fid=@item.UserId">共 @item.MsgCount 条记录</a>
                            <span class="chat" title=""><a data-id="@item.UserId" data-name="@item.UserName"  data-msgType="0" data-stateType="0" data-relateId="0"  href="#msg_box" data-toggle="modal">回复</a></span></div>
                    </div>
                </div>
